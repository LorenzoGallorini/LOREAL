<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:paddingBottom="60dp"
     >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.home.HomeFragment">

        <TextView
            android:id="@+id/alCinema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/title_now_playing"
            android:textColor="@color/titleWhite"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_showAll_nowPlaying"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginBottom="16dp"
            android:text="@string/title_show_all"
            android:textColor="@android:color/white"
            android:textSize="@dimen/buttom_show_all"
            app:layout_constraintBottom_toTopOf="@+id/horizontalScrollViewNowPlaying"
            app:layout_constraintStart_toEndOf="@+id/alCinema" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollViewNowPlaying"
            android:layout_width="420dp"
            android:layout_height="@dimen/horizontal_scroll_view_height"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alCinema">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher_background"
                    android:contentDescription="@string/app_name"/>

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher_background"
                    android:contentDescription="@string/app_name"/>

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher_background"
                    android:contentDescription="@string/app_name"/>

                <ImageButton
                    android:id="@+id/imageButton7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher_background"
                    android:contentDescription="@string/app_name"/>

                <ImageButton
                    android:id="@+id/imageButton20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher_background"
                    android:contentDescription="@string/app_name"/>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/TopRated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/title_top_rated"
            android:textColor="@color/titleWhite"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@+id/alCinema"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollViewNowPlaying" />

        <TextView
            android:id="@+id/textView2_showAll_TopRated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/title_show_all"
            android:textColor="@android:color/white"
            android:textSize="@dimen/buttom_show_all"
            app:layout_constraintBottom_toTopOf="@+id/horizontalScrollViewTopRated"
            app:layout_constraintStart_toStartOf="@+id/textView_showAll_nowPlaying" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollViewTopRated"
            android:layout_width="409dp"
            android:layout_height="@dimen/horizontal_scroll_view_height"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/horizontalScrollViewNowPlaying"
            app:layout_constraintTop_toBottomOf="@+id/TopRated">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_launcher_background" />

                <ImageButton
                    android:id="@+id/imageButton9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_launcher_background" />

                <ImageButton
                    android:id="@+id/imageButton10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_launcher_background" />

                <ImageButton
                    android:id="@+id/imageButton11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_launcher_background" />
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/ComingSoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/title_coming_soon"
            android:textColor="@color/titleWhite"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@+id/TopRated"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollViewTopRated" />

        <TextView
            android:id="@+id/textView_showAll_ComingSoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/title_show_all"
            android:textSize="@dimen/buttom_show_all"
            app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
            app:layout_constraintStart_toStartOf="@+id/textView2_showAll_TopRated"
            android:textColor="@android:color/white"/>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="406dp"
            android:layout_height="@dimen/horizontal_scroll_view_height"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/horizontalScrollViewTopRated"
            app:layout_constraintTop_toBottomOf="@+id/ComingSoon">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher_background"
                    android:contentDescription="@string/app_name"/>

                <ImageButton
                    android:id="@+id/imageButton15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher_background"
                    android:contentDescription="@string/app_name"/>

                <ImageButton
                    android:id="@+id/imageButton16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher_background"
                    android:contentDescription="@string/app_name"/>

                <ImageButton
                    android:id="@+id/imageButton17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher_background"
                    android:contentDescription="@string/app_name"/>
            </LinearLayout>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>